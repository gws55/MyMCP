<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:text="@string/signup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:id="@+id/signup_title" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_firstname"
        android:width="200dp"
        android:height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/signup_title"
        android:layout_alignStart="@+id/signup_title" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_lastname"
        android:width="200dp"
        android:height="50dp"
        android:layout_below="@+id/signup_firstname"
        android:layout_alignLeft="@+id/signup_title"
        android:layout_marginLeft="50dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_asc_no"
        android:width="200dp"
        android:height="50dp"
        android:layout_below="@+id/signup_lastname"
        android:layout_alignLeft="@+id/signup_title"
        android:layout_marginLeft="50dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_mcp_user_name"
        android:width="200dp"
        android:height="50dp"
        android:layout_below="@+id/signup_asc_no"
        android:layout_alignLeft="@+id/signup_title"
        android:layout_marginLeft="50dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_email"
        android:width="200dp"
        android:height="50dp"
        android:layout_below="@+id/signup_mcp_user_name"
        android:layout_alignLeft="@+id/signup_title"
        android:layout_marginLeft="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/signup_button"
        android:layout_below="@+id/signup_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="onClick_signup_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="First Name"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/signup_firstname"
        android:layout_toStartOf="@+id/signup_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Last Name"
        android:id="@+id/textView4"
        android:layout_above="@+id/signup_asc_no"
        android:layout_toStartOf="@+id/signup_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ASC No."
        android:id="@+id/textView5"
        android:layout_above="@+id/signup_mcp_user_name"
        android:layout_toStartOf="@+id/signup_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="MCP Username"
        android:id="@+id/textView8"
        android:layout_above="@+id/signup_email"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email"
        android:id="@+id/textView9"
        android:layout_alignBottom="@+id/signup_email"
        android:layout_alignEnd="@+id/textView4" />

</RelativeLayout>
